FROM node:16-alpine as builder

WORKDIR /home/node/build

# Install dependencies
COPY package.json .
COPY package-lock.json .
RUN npm install --include=dev --legacy-peer-deps

# Build react app
COPY . .
RUN npm run build

# --- Stage 2: Nginx ---
FROM nginx:alpine

# ØªÙ†Ø¸ÙŠÙ Ø§Ù„Ù…Ø¬Ù„Ø¯
